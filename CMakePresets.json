{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "x86_64",
            "displayName": "Build for x86_64 (native)",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/x86_64",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "USE_FETCHCONTENT": "ON",      
                "BUILD_TESTING": "ON"     

            }
        },
        {
            "name": "aarch64",
            "displayName": "Build for Aarch64 (cross)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/aarch64",
            "toolchainFile": "${sourceDir}/aarch64-toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "USE_FETCHCONTENT": "ON",      
                "BUILD_TESTING": "OFF"     
            }
        }
    ],
    "buildPresets": [
        {
            "name": "x86_64",
            "description": "",
            "displayName": "",
            "configurePreset": "x86_64"
        }
    ]
}